@Model
@{
    ViewData["Title"] = "Confirmar Compra";
}
@if (Model is not null)
{
    <h1>Confirmar Compra</h1>
    <p>Produto: @Model.Produto</p>
    <p>Pre√ßo: R$@Model.Preco</p>

    <br>
    <h3>Insira seus dados</h3>
	<form asp-controller="Produto" asp-action="EnviarOrdem" method="post">
		<input type="hidden" name="ProdutoId" value="@Model.Uuid">
		<input class="form-control form-control-lg" type="text" name="Nome" placeholder="Nome" aria-label="Nome">
		<input class="form-control form-control-lg" type="text" name="Email" placeholder="Email" aria-label="Email">
		<input class="form-control form-control-lg" type="text" name="Telefone" placeholder="Telefone" aria-label="Telefone">
        <br>
        <button type="submit" class="btn btn-success">Concluir Compra</button>
    </form>
    
}